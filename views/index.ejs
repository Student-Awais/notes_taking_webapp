<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
    <title>Notes Taking App</title>
  </head>
  <body>
    <div class="main w-full min-h-screen bg-zinc-900 text-white bg-">
      <div class="form p-14">
        <form action="/create" method="post">
          <input
            class="block w-full rounded-md outline-none px-7 py-4 bg-zinc-600"
            type="text"
            placeholder="Title"
            name="title"
          />
          <textarea
            class="block w-full rounded-md outline-none px-7 py-4 bg-zinc-600 resize-none mt-5"
            placeholder="Write your task details here..."
            name="details"
          ></textarea>
          <input
            class="bg-green-600 px-5 py-3 rounded-xl mt-6"
            type="submit"
            value="Add Task"
          />
        </form>
      </div>
      <div class="tasks px-14 py-5 flex gap-5 flex-wrap">
        <%if(files.length > 0) { %> <% files.forEach( (val) => { %>
        <div class="task min-w-60 min-h-24-h-20 bg-zinc-700 rounded-md p-4">
          <h1 class="font-bold text-xl tracking-tight"><%= val %></h1>
          <div class="flex justify-between items-center mt-3">
            <a class="text-blue-500 inline-block" href="/file/<%= val %>"
              >Read more.</a
            >
            <a class="text-[#A6A5AB]" href="/edit/<%=val%>">edit filename</a>
          </div>
        </div>
        <% }) %> <% } else { %>
        <h3 class="text-2xl font-bold px-2 py-5">no tasks yet.</h3>
        <% } %>
      </div>
    </div>
  </body>
</html>
